<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Door Type</title>
    <link rel="stylesheet" href="/form-styles.css"> <!-- Include the CSS file -->
</head>
<body>
    <div class="form-container">
        <h2>Add Door Type</h2>
        <form method="POST" action="/admin/tipe_door/add">
            <label for="nama_tipe">Door Type Name:</label>
            <input type="text" name="nama_tipe" id="nama_tipe" required>

            <label for="lantai_id">Floor:</label>
            <select name="lantai_id" id="lantai_id" required>
                <% floorTypes.forEach(floor => { %>
                    <option value="<%= floor.id %>"><%= floor.nama_lantai %></option>
                <% }) %>
            </select>

            <button type="submit">Add Door Type</button>

            <div class="back-link">
                <a href="/admin">Back to Admin Dashboard</a>
            </div>
        </form>
    </div>
</body>
</html>
