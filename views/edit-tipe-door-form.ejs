<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Door Type</title>
    <link rel="stylesheet" href="/form-styles.css">
</head>
<body>
    <div class="form-container">
        <h2>Edit Door Type</h2>
        <form method="POST" action="/admin/tipe_door/update/<%= tipeDoor.id %>">
            <label for="nama_tipe">Door Type Name:</label>
            <input type="text" name="nama_tipe" id="nama_tipe" value="<%= tipeDoor.nama_tipe %>" required>

            <label for="lantai_id">Floor:</label>
            <select name="lantai_id" id="lantai_id" required>
                <% floorTypes.forEach(floor => { %>
                    <option value="<%= floor.id %>" <% if(floor.id === tipeDoor.lantai_id){ %>selected<% } %>><%= floor.nama_lantai %></option>
                <% }) %>
            </select>

            <button type="submit">Update Door Type</button>

            <div class="back-link">
                <a href="/admin">Back to Admin Dashboard</a>
            </div>
        </form>
    </div>
</body>
</html>
